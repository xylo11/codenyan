<div class="new-park">
  <h1>新規パーク作成</h1>

  <%= form_with(model: @park, local: true) do |form| %>
    <div class="new-park-form">
      <%= form.label :name %>
      <%= form.text_field :name %>

      <%= form.label :info %>
      <%= form.text_area :info %>

      <div class="submit-button">
        <%= form.submit "作成" %>
      </div>
    </div>
  <% end %>

  <%= link_to "キャンセル", parks_path %>
</div>