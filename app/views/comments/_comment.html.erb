<div class="comment" id="comment-<%= comment.id %>">
  <div class="comment_content">
    Posted by <%= link_to comment.user.username, comment.user, class: "username" %> <%= time_ago_in_words(comment.created_at) %> ago
    <p><%= comment.content %></p>
    <% if comment.commentable.is_a?(Post) %>
      <%= link_to 'Edit', '#', class: 'edit_comment' %> |
      <%= link_to 'Delete Comment', comment_path(comment), method: :delete, remote: true, data: {confirm: 'Are you sure?'} %>
    <% else %>
      <%= link_to 'Edit', '#', class: 'edit_comment' %> |
      <%= link_to 'Delete Comment', reply_path(comment.commentable, comment), method: :delete, remote: true, data: {confirm: 'Are you sure?'} %>
    <% end %>
  </div>
  
  <div class="edit_comment_form" style="display: none;">
    <%= render 'comments/form', comment: comment %>
  </div>
</div>